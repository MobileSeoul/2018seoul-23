<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_info_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_info_image"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_info_contenttypeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ContentType"
                    android:textColor="@color/mainColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_contenttypeid"
                    android:text="Title"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_info_tel"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/tv_info_title"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_tel"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_info_tel"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/ready_for_update" />

                <ImageView
                    android:id="@+id/iv_info_addr"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_tel"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_place_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_addr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_info_addr"
                    android:text="@string/ready_for_update" />

                <ImageView
                    android:id="@+id/iv_info_opentime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/tv_info_addr"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_time_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_opentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_opentime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_info_opentime"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/ready_for_update" />

                <ImageView
                    android:id="@+id/iv_info_resttime"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/iv_info_opentime"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_block_black_24dp" />

                <TextView
                    android:id="@+id/tv_info_resttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_info_resttime"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_info_resttime"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/ready_for_update" />


                <ImageView
                    android:id="@+id/iv_info_parking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/iv_info_resttime"
                    android:layout_marginTop="20dp"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_info_pet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/iv_info_parking"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_parking"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_info_stroller"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/iv_info_pet"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_info_pet"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/btn_info_info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_info_contenttypeid"
                    android:layout_marginRight="20dp"
                    android:background="#00000000"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/btn_info_info"
                    android:layout_below="@id/btn_info_info"
                    android:layout_marginTop="5dp"
                    android:text="무장애정보조회"
                    android:textSize="10dp" />

                <LinearLayout
                    android:id="@+id/layout_info_com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_info_parking"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_info_tel"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/btnshape"
                            android:text="전화걸기" />

                        <Button
                            android:id="@+id/btn_info_addr"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/btnshape"
                            android:text="길 찾기" />

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>