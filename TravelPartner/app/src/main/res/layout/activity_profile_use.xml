<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileUse">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이용방법"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f1f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" > 무장애 정보"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="무장애 정보를 제공함으로써 장소에 대한 정보를 쉽게 알 수 있습니다."
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f1f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" > 전화걸기"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모르는 정보가 있을 때는 전화 걸기 버튼으로 통화가 가능합니다."
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f1f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" > 길찾기"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위치를 정확히 모를 때 지도앱으로 연결되어 위치를 확인할 수 있습니다."
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f1f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" > 검색"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="찾고 싶은 장소는 단어로 검색해서 찾을 수 있습니다."
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f1f1" />
</LinearLayout>