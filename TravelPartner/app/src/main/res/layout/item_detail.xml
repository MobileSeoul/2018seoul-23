<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_detailitem"
        cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_detailitem_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_detailitem_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_detailitem_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Item Title"

                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tv_detailitem_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_detailitem_title"
                    android:layout_alignLeft="@id/tv_detailitem_title"
                    android:layout_marginRight="15dp"
                    android:text="Item Contents"
                    android:textSize="12dp"
                    android:textColor="@color/silver"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/boundary"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>